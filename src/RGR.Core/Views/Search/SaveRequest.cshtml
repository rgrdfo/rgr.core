@using Microsoft.AspNetCore.Html;
@model RGR.Core.ViewModels.SaveRequestModel

<body>
    <div class="body-content">
        <h2>Сохранение запроса</h2>
        <br />

        @{
            var s = "";
            foreach (var mState in ViewData.ModelState.Values)
            {
                foreach (var error in mState.Errors)
                {
                    s += ($"{error.ErrorMessage}<br/>");
                }

            }
            var err = new HtmlString(s + "<br/>");
        }
        @err

        <form asp-action="SaveRequest" asp-controller="Search" asp-anti-forgery="false">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div>
                <div class="form-group">
                    <label asp-for="Caption">Название запроса</label>
                    <input type="text" asp-for="Caption" />
                    <span asp-validation-for="Caption" />
                </div>
               <!--<div class="form-group">
                    <label asp-for="Query">Строка запроса: </label>
                    <input type="text" asp-for="Query">@**@ViewData["Query"] @*</input>*@
                    <span asp-validation-for="Query" />
                </div>-->
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn" />
                </div>
            </div>
        </form>
    </div>
</body>